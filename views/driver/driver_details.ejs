<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="assets/css/reset.css" />
  <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
  <link href="https://www.cssscript.com/demo/sticky.css" rel="stylesheet" type="text/css">
  <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
  <script src="jquery-3.6.0.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="js/cities.js"></script>
  <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="css/dealer-home.css" />
  <title>Welcome Dealer</title>
</head>

<body>



  <!-- form -->

  <div class="page-content">
    <div class="form-v10-content">
      <form class="form-detail" action="/driver_details" method="post" id="myform">
        <div class="form-left">
          <h2>Driver Registration</h2>
          <div class="form-row">
            <input type="text" class="form-control" name="username" placeholder="Name" required>
          </div>

          <div class="form-row">
            <input type="text" class="form-control" name="age" placeholder="Age (in yrs)">
          </div>

          <div class="form-row">
            <input type="text" class="form-control" name="truck_number" placeholder="Truck No.">
          </div>

          <div class="form-row">
            <input type="text" class="form-control" name="truck_capacity" placeholder="Truck capacity">
          </div>

          <div class="form-row">
            <input type="text" class="form-control" name="driving_experience" placeholder="Driving Experience">
          </div>

          <div class="form-row">
            <input type="text" class="form-control" name="transporter_name" placeholder="Transporter Name">
          </div>


        </div>
        <div class="form-right" style="background-color: rgb(219, 105, 105);">
          <h2>Contact Details</h2>
          <div class="form-row">
            <input type="text" class="form-control" name="phonenumber" placeholder="Mobile no." required>
          </div>

          <h3 style="margin-left: 4.5rem; color: aliceblue;">Select 3 Interseted Routes</h3>


          <div class="container">

            <div class="row">
              <div class="col" style="border: 2px solid rgb(6, 6, 46);">
                <!-- 1 -->
                <div class="form-row">
                  <h4 style="margin-left: 40%;color: brown;">From First </h4>
                  <select onchange="print_city('state', this.selectedIndex);" id="s1" name="from_first_state"
                    class="form-control1" aria-placeholder="From State" required></select>
                </div>
                <div class="form-row">
                  <select id="state" name="from_first_city" class="form-control1" required></select>
                </div>
                <script language="javascript">print_state("s1");</script>


                <div class="form-row">
                  <h4 style="margin-left: 40%;color: brown;">To First </h4>
                  <select onchange="print_city('state1', this.selectedIndex);" id="s2" name="to_first_state"
                    class="form-control2" required></select>
                </div>
                <div class="form-row">
                  <select id="state1" name="to_first_city" class="form-control2" required></select>
                </div>
                <script language="javascript">print_state("s2");</script>
              </div>




              <div class="col" style="border: 2px solid rgb(2, 2, 34);">
                <!-- 2 -->
                <div class="form-row">
                  <h4 style="margin-left: 40%;color: brown;">From Second </h4>
                  <select onchange="print_city('state3', this.selectedIndex);" id="s3" name="from_second_state"
                    class="form-control3" aria-placeholder="From State" required></select>
                </div>
                <div class="form-row">
                  <select id="state3" name="from_second_city" class="form-control1" required></select>
                </div>
                <script language="javascript">print_state("s3");</script>


                <div class="form-row">
                  <h4 style="margin-left: 40%;color: brown;">To Second </h4>
                  <select onchange="print_city('state4', this.selectedIndex);" id="s4" name="to_second_state"
                    class="form-control4" required></select>
                </div>
                <div class="form-row">
                  <select id="state4" name="to_second_city" class="form-control4" required></select>
                </div>
                <script language="javascript">print_state("s4");</script>
              </div>


              <div class="col" style="border: 2px solid rgb(2, 2, 34);">
                <!-- 3 -->
                <div class="form-row">
                  <h4 style="margin-left: 40%;color: brown;">From Third </h4>
                  <select onchange="print_city('state5', this.selectedIndex);" id="s5" name="from_third_state"
                    class="form-control5" aria-placeholder="From State" required></select>
                </div>
                <div class="form-row">
                  <select id="state5" name="from_third_city" class="form-control5" required></select>
                </div>
                <script language="javascript">print_state("s5");</script>


                <div class="form-row">
                  <h4 style="margin-left: 40%;color: brown;">To Third </h4>
                  <select onchange="print_city('state6', this.selectedIndex);" id="s6" name="to_third_state"
                    class="form-control6" required></select>
                </div>
                <div class="form-row">
                  <select id="state6" name="to_third_city" class="form-control6" required></select>
                </div>
                <script language="javascript">print_state("s6");</script>
              </div>
            </div>
          </div>





          <!-- 3 -->
          <div class="form-row-last">
            <input type="submit" name="register" class="register" value="Register ">
          </div>
        </div>
      </form>
    </div>
  </div>






  <script type="text/javascript">

    var c = 0;
    function menu() {
      if (c % 2 == 0) {
        document.querySelector('.cont_drobpdown_menu').className = "cont_drobpdown_menu active";
        document.querySelector('.cont_icon_trg').className = "cont_icon_trg active";
        c++;
      } else {
        document.querySelector('.cont_drobpdown_menu').className = "cont_drobpdown_menu disable";
        document.querySelector('.cont_icon_trg').className = "cont_icon_trg disable";
        c++;
      }
    }
  </script>
</body>

</html>