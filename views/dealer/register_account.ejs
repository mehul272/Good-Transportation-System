  <!-- Form start -->

  <div class="admin">

    <div class="container" id="container">
      <div class="form-container sign-in-container">
        <form action="/dealer_register" method="POST">
          <h1>Registration</h1>
          <br>
          <input type="email" class="form-control" placeholder="Email" name="username" required>
          <input type="password" class="form-control" placeholder="Password" name="password" required>
          <button><a style="color: rgb(255, 255, 255);">Register</a></button>
        </form>
      </div>
      <div class="form-container sign-in-container1">
        <form action="/dealer_login" method="POST">
          <h1>Login</h1>
          <br>
          <input type="email" class="form-control" name="username" placeholder="Email" required>
          <input type="password" class="form-control" name="password" placeholder="Password" required>

          <a href="/login_otp" style="font-size: 15px; margin: 1rem;">Login With Otp</a>
          <button><a style="color: cornsilk;">Login</a></button>
        </form>
      </div>
      <div class="overlay-container">
        <div class="overlay">
          <div class="overlay-panel overlay-left">
            <h1>Dealer Login</h1>
            <p>Already registered? Login now!</p>
            <button class="ghost" id="signIn">Click to Register</button>
          </div>
          <div class="overlay-panel overlay-right">
            <h1>Dealer Registration</h1>
            <p>New user? Register to Transportation System</p>
            <button class="ghost" id="signUp">Click to Login</button>
          </div>
        </div>
      </div>
    </div>









  </div>


  <!-- Back to Top -->
